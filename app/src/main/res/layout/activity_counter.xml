<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:keepScreenOn="true"
    >
    <View
        android:id="@+id/strut_hori"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        />
    <View
        android:id="@+id/strut_vert"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/strut_hori"
        />
    <!-- Camera View -->
    <org.opencv.android.JavaCameraView
        android:id="@+id/openCvCameraView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@id/strut_hori"
        android:layout_alignBottom="@id/strut_vert"
        opencv:show_fps="true"
        opencv:camera_id="any"
        />
    <!-- Prime View -->
    <ImageView
        android:id="@+id/primeView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignEnd="@id/strut_hori"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/strut_vert"
        android:contentDescription="@string/frameViewDescription"
    />
    <!-- Compare View -->
    <ImageView
        android:id="@+id/compareView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignStart="@id/strut_vert"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/frameViewDescription"
        />
    <Button
        android:id="@+id/control_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/play"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/toggleKp_button"
        android:text="@string/toggleKp_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/control_button"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/repetition_count"
        android:text="@string/repetition_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        />
    <TextView
        android:id="@+id/repetition_count_label"
        android:text="@string/repetition_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/repetition_count"
        android:paddingBottom="10dp"
        />
    <TextView
        android:id="@+id/countdownTimer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        style="@style/CountDownText"
        />

    <TextView
        android:id="@+id/average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#FF0000"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text=""
        />
    <TextView
        android:id="@+id/average_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/average"
        android:layout_marginTop="10dp"
        android:textColor="#FF0000"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text="Average: "
        />
</RelativeLayout>
